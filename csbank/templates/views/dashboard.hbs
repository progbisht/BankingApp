<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{user.firstname}} Dashboard</title>
    <link rel="stylesheet" href="css/styledashboard.css" />
    <!-- Font Awesome Cdn Link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    />
  </head>

  <body>
    
    {{>dashboardHeader}}

    

      <div class="main-body">
        <h2>Dashboard</h2>
        <div class="promo_card">
          <h1>Welcome {{user.firstname}} {{user.lastname}}</h1>
          <span>{{user.account.accountType}} account</span>
          <button>Learn More</button>
        </div>

      
        <div class="history_lists">
          <div class="list1">
            <div class="row">
              <h4>Transactions History</h4>
              <a href="#">See all</a>
            </div>
            <table>
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Timestamp</th>
                  <th>Type</th>
                  <th>Ammount</th>
                </tr>
              </thead>
              <tbody>
                {{#if user.transactions.length}}
                  {{#each user.transactions}}
                  <tr>
                    <td>{{this.transaction.username}}</td>
                    <td>{{this.transaction.timestamp}}</td>
                    <td>{{this.transaction.transactionType}}</td>
                    <td>{{this.transaction.amount}}</td>
                  </tr>
                  {{/each}}
                {{else}}
                  <tr>
                      <td colspan="4">No Transactions</td>
                  </tr>
                {{/if}}
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="sidebar">
        <h4>Account Balance</h4>

        <div class="balance">
          <i class="fa-solid fa-indian-rupee-sign icon"></i>
          <div class="info">
            <h5>INR</h5>
            <span><i class="fa-solid fa-indian-rupee-sign"></i>{{user.account.balance}}</span>
          </div>
        </div>

      </div>
    </div>


    {{!-- {{>footer}} --}}


  </body>
</html>